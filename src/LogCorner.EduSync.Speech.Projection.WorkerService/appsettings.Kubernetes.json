{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log.txt",
          "outputTemplate": "{Timestamp} {Message}{NewLine:1}{Exception:1}"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithProcessId",
      "WithThreadId"
    ],

    "Properties": {
      "ApplicationName": "LogCorner.EduSync.Speech.Projection.WorkerService"
    }
  },
  "kafkaUrl": "localhost:9092",
  "elasticSearchUrl": "http://localhost:9201",
  "HubUrl": "https://localhost:5001/logcornerhub",
  "OpenTelemetry": {
    "ServiceName": "LogCorner.EduSync.Speech.Consumer.Dev",
    "SourceName": "consumer-service",
    "Otlp": {
      "ServiceName": "LogCorner.EduSync.Speech.Consumer.Dev",
      "Endpoint": "http://localhost:4317"
    },
    "Jaeger": {
      "Hostname": "localhost",
      "PortNumber": 6831
    },
    "Zipkin": {
      "Hostname": "localhost",
      "PortNumber": 9412
    },
    "NewRelic": {
      "Hostname": "https://otlp.nr-data.net",
      "PortNumber": 4317,
      "LicenceKey": "[NewRelicApiKey]"
    }
  }
}